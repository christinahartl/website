body {
  position: relative;
}

img {
  max-width: 100%;
  height: auto;
}

h1 {
  line-height: 1.2em;
  margin: 0;
  color: $white;
  font-size: 30px;
}

h2 {
  color: $blue;
}

h3 {
  font-size: 22px;
}

p {
  margin: 0 0 $line-height-computed;
}

.title-prefix {
  font-size: $font-size-base;
  display: block;
  line-height: 1em;
  text-transform: lowercase;
  color: rgba(255, 255, 255, 0.7);
  margin-bottom: 5px;
}

blockquote {
  font-style: italic;
  font-size: 18px;
  letter-spacing: 0.04em;
  border: none;
  color: $gray-light;
  padding-left: 0;
  padding-right: 0;
  margin: 0 0 2em;
  text-align: center;

  footer {
    color: $grey1;
  }

  span {

    &:before,
    &:after {
      content: "»"; // TODO
      font-style: normal;
      line-height: 28px;
      margin-right: 3px;
      font-weight: 700;
      display: inline-block;
      position: relative;
      top: -3px;
      color: $grey1;
    }

    &:after {
      margin: 0 0 0 3px;
      content: "«";
    }
  }
}

ul:not([class]) {

  li {
    list-style: none;

    &::before {
      content: "•";
      float: left;
      margin-left: -0.8em;
      color: $green;
      font-size: 120%;
      margin-top: -0.1em;
    }
  }
}

.ampersand {
  font-style: italic;
  margin: 0 0.5em;
}

.psychologist {
  padding: 0 $grid-gutter-width / 2;
}

.portrait {
  display: block;
  margin: 0 auto;
  border-radius: 3px;
  margin-right: 20px;
  float: left;
}

.skills {
  padding: 0;
  margin: 0;

  li {
    list-style: none;
    margin-bottom: 0.2em;
    color: $gray;
  }
}

.text-center {
  text-align: center;
}

.text-right {
  text-align: right;
}

.subtitle {
  color: $gray-light;
  margin-bottom: 30px;
}

hr {
  position: relative;
  //border-color: lighten($brand-primary, 35%);
  border-color: lighten($gray, 55%);
  border-color: $grey1;
  margin: ($line-height-computed * 3) ($grid-gutter-width);

  &::before {
    content: "&";
    font-style: italic;
    font-size: 24px;
    //color: lighten($brand-primary, 10%);
    color: $grey1;
    background: $body-bg;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: -15px;
    padding: 0 10px;
  }
}

.signature {
  margin-top: 4em;
  max-width: 300px;
}

.no-transition,
.no-transition .page {
  transition: none !important;
}
